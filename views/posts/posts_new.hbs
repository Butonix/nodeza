
<div class="panel panel-default">

  <div class="panel-heading">
    <span class="glyphicon glyphicon-list-alt"></span> New Post
    <a href="/admin/blog" class="close pull-right">&times;</a>
  </div>

  <div class="panel-body">
  <form class="form-horizontal" id="event-form" action="/admin/blog/new" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrf}}" />
    <div class="form-group">
      <label class="col-sm-2 control-label" for="title">
        Title *
      </label>

      <div class="col-sm-9">
        <input class="form-control" type="text" name="title" id="title" placeholder="" required="" autofocus />
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="category">
        Category
      </label>

      <div class="col-sm-9">
        <select name="category" id="category">
          {{#each categories}}
            <option value="{{id}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label" for="tags">Tags</label>

      <div class="col-sm-9">
        <input class="form-control" type="text" name="tags" id="tags" placeholder="comma, seperated" required="" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="meta_title">
        Meta Title
      </label>

      <div class="col-sm-9">
        <input class="form-control" type="text" name="meta_title" id="meta_title" placeholder="meta data for page title" required="" autofocus />
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="meta_description">
        Meta Description
      </label>

      <div class="col-sm-9">
        <input class="form-control" type="text" name="meta_description" id="meta_description" placeholder="meta data for page description" />
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label" for="markdown">Post *</label>
      <div class="col-sm-9">
        <div id="epiceditor" style="height: 400px; padding: 0px;" class="form-control">
          <textarea style="display:none" class="form-control" rows="15" name="markdown" id="markdown" required=""></textarea>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="published"> Published
          </label>
        </div>
        {{#ifCond user.role.role '==' 'Super Administrator'}}
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="featured"> Featured
          </label>
        </div>
        {{/ifCond}}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <button class="btn btn-success" type="submit">
          <i class="fa fa-check"></i> Create Post
        </button>

        <a href="/admin/blog" class="btn btn-default">
            <span class="glyphicon glyphicon-remove"></span> Cancel
        </a>
      </div>
    </div>
  </form>
  </div>
</div>
