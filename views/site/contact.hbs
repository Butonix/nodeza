


{{#extend "jumbotron"}}
<div id="jumbotron" class="jumbotron <%= page %>">
  <div class="container">
    <h1>Contact Us</h1>

    <p>Get in touch....</p>
  </div>
</div>
{{/extend}}


<div class="col-sm-12">
  {{> flash}}

  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-unlock-alt"></i> Contact Us
    </div>
    
    <div class="panel-body">
      <form class="form-horizontal" id="signup-form" method="POST">
    
        <input type="hidden" name="_csrf" value="{{_csrf}}" />
    
        <div class="form-group">
          <label class="col-sm-3 control-label" for="name">Name</label>
          <div class="col-sm-7">
            <input class="form-control" type="text" name="name" id="name" placeholder="Email" required="" />
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label" for="email">Email</label>
          <div class="col-sm-7">
            <input class="form-control" type="email" name="email" id="email" placeholder="Email" required="" />
          </div>
        </div>
  
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-7">
            <button class="btn btn-primary" type="submit">
              <span class="fa fa-unlock-alt"></span> Send
            </button> 
          </div>
        </div>
      </form>
    </div>
  </div>
</div> 

{{#extend "footer"}}
  {{> footer}}
{{/extend}}
