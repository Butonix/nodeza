
<%
  if (pagination.limit < pagination.total) {
%>
<div class="row">
<ul class="pagination">
  <%
    if (pagination.isFirstPage) {
  %>
    <li class="disabled">
      <a href="#">&laquo; Prev</a>
    </li>
  <%
    }
    else {
  %>
    <li>
      <a href="<%= pagination.base %>?p=<%= pagination.prev %><% if (query.sort) { %>&sortby=<%= query.sort %><% } %>">&laquo; Prev</a>
    </li>
  <%
    }
  %>


  <%
    pagination.items.forEach(function (page) { 
      if (page == '...') {
  %>
        <li class="disabled"><a href="#">...</a></li>
  <%  
      } 
      else {
  %>
        <li <% if(page === pagination.currentpage) { %>class="active"<% } %>>
          <a href="<%= pagination.base %>?p=<%= page %><% if (query.sort) { %>&sortby=<%= query.sort %><% } %>">
            <%= page %>
          </a>
        </li>
  <%
      }
    })
  %>


  <%
    if (pagination.isLastPage) {
  %>
    <li class="disabled"><a href="#">Next &raquo;</a></li>
  <%
    }
    else {
  %>
    <li>
      <a href="<%= pagination.base %>?p=<%= pagination.next %><% if (query.sort) { %>&sortby=<%= query.sort %><% } %>">Next &raquo;</a>
    </li>
  <%
    }
  %>
</ul>
</div>
<%
}
%>