            <li <% if(title == 'Sign Up') { %>class="active"<% } %>>
              <a href="/signup">Sign Up</a>
            </li>
            <% 
            } 
            else { %>

            <li <% 
              var klass='';
              switch(title) {
                case 'My Account':
                case 'Change Password':
                case 'Linked Accounts':
                  klass = "class=active";
                break;
              }
            %>
            <%= klass %>>
              <a href="/account" class="dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-wrench"></span> Account 
                <span class="caret"></span>
              </a>

              <ul class="dropdown-menu">
                <li>
                  <a href="/account">Profile Infomation</a>
