
{{> leftsidebar}}

<div class="col-sm-9 blog-main">
  {{> flash}}

  <div class="container-fluid">
    <div class="row" style="text-align:right">
      <a role="button" class="btn btn-danger" href="/meetups/new">
        <span class="glyphicon glyphicon-user"></span> Create a meetup
      </a>
    </div>
  
    <div class="row" style="margin-top:5px;">
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th style="text-align:center">
              <input type="checkbox" id="selectall">
            </th>
            <th>
              Title
            </th>
            <th>
              Created At
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
              <span class="glyphicon glyphicon-eye-open"></span>
            </th>
          </tr>
        </thead>
  
        <tbody>
          {{#ifCond meetups.length '>' 0}}
            {{#each meetups}}
            <tr>
              <td style="text-align:center">
                <input type="checkbox" id="id" value="{{id}}">
              </td>
              <td>
                <a href="/meetups/edit/{{id}}">{{title}}</a>
              </td>
              <td>
                {{#parseDate created_at 'DD-MM-YYYY HH:MM:ss'}}{{/parseDate}}
              </td>
              <td style="text-align:center">
                <a href="/meetups/edit/{{id}}" title="Edit">
                  <span class="glyphicon glyphicon-pencil"></span>
                </a> 
              </td>
              <td style="text-align:center">
                <a href="#" class="text-danger" title="Delete">
                  <span class="glyphicon glyphicon-trash"></span> 
                </a> 
              </td>
              <td style="text-align:center">
                {{views}}
              </td>
            </tr>
            {{/each}}
          {{/ifCond}}
        </tbody>
      </table>
    </div>
  
    {{> pagination}}
  </div>
</div>